{
  "name": "electron-react-app",
  "version": "1.0.0",
  "description": "Electron app with React, TypeScript, and styled-components",
  "main": "dist/main.js",
  "scripts": {
    "dev": "npm run build:electron && concurrently \"npm run dev:react\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:react": "webpack serve --config webpack.config.js --mode development",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "webpack --config webpack.config.js --mode production",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:app": "npm run build && electron-builder",
    "build:app:mac": "npm run build && electron-builder --mac",
    "build:app:win": "npm run build && electron-builder --win",
    "build:app:linux": "npm run build && electron-builder --linux",
    "start": "electron .",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "styled-components"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.vibecoding.document-comparer",
    "productName": "문서 비교 프로그램",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@types/diff": "^7.0.2",
    "diff": "^8.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.54.0",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
